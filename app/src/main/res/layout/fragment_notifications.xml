<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/default_margin"
    android:orientation="vertical"
    tools:context="com.capshil.esieapp.controller.fragment.NotificationsFragment">

    <Button
        android:id="@+id/button_simple_notifications"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/notif_1"/>

    <Button
        android:id="@+id/button_toast_notifications"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/notif_2"/>

    <Button
        android:id="@+id/button_both_notifications"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/notif_3"/>

    <Button
        android:id="@+id/button_dialog_notifications"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/notif_4"/>

</LinearLayout>